{
  "name": "app",
  "version": "1.0.0",
  "description": "HootSolvedIt",
  "license": "ISC",
  "author": "SerenaKM",
  "type": "module",
  "main": "app.js",
  "engines": {
    "node": ">=24.3.0"
  },
  "scripts": {
    "build": "vite build",
    "preview": "vite preview",
    "dev:client": "vite",
    "dev:server": "node --watch server/src/index.ts",
    "format": "prettier --write \"src/**/*.{js, jsx, ts, tsx, css, html}\"",
    "lint": "eslint",
    "start": "node src/index.ts",
    "test": "cross-env APP_STAGE=test vitest run",
    "test:server": "cross-env APP_STAGE=test vitest run --project server",
    "test:client-happy-dom": "vitest run --project client-happy-dom",
    "test:client-browser": "vitest run --project client-browser",
    "test:watch": "cross-env APP_STAGE=test vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node src/db/seed.ts"
  },
  "dependencies": {
    "@epic-web/remember": "^1.1.0",
    "@fetch-mock/vitest": "^0.2.18",
    "@tanstack/react-query": "^5.59.13",
    "@tanstack/react-router": "^1.65.0",
    "cors": "^2.8.6",
    "custom-env": "^2.0.6",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.59.7",
    "@tanstack/react-query-devtools": "^5.59.13",
    "@tanstack/router-devtools": "^1.65.0",
    "@tanstack/router-plugin": "^1.65.0",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.1",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.9.0",
    "happy-dom": "^20.6.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "minimatch": "^9.0.5",
    "esbuild": "^0.25.0"
  }
}
